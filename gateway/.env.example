# Phase 10: Gateway Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
S3_BUCKET_NAME=your-s3-bucket-name
USE_S3=true

# ============================================================================
# RDS MySQL Database
# ============================================================================
RDS_ENDPOINT=your-rds-endpoint.rds.amazonaws.com:3306
RDS_USERNAME=admin
RDS_PASSWORD=your_rds_password_here
RDS_DB_NAME=soundcanvas
RDS_SSL=false

# ============================================================================
# Local MySQL (for development - leave blank if using RDS)
# ============================================================================
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=soundcanvas
# DB_PASSWORD=soundcanvas
# DB_NAME=soundcanvas

# ============================================================================
# Service URLs
# ============================================================================
CPP_CORE_URL=http://localhost:8080
AUDIO_PRODUCER_URL=http://localhost:5001

# ============================================================================
# Server Configuration
# ============================================================================
PORT=4000
NODE_ENV=development
