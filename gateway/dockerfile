FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy TypeScript config and source
COPY tsconfig.json ./
COPY src ./src

# Build TypeScript to JavaScript
RUN npm run build

# Set production environment
ENV NODE_ENV=production

# Expose GraphQL port
EXPOSE 4000

# Start the server
CMD ["npm", "start"]