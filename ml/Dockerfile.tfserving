# Custom TensorFlow Serving container for Apple Silicon compatibility
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the serving script
COPY src/serve_model.py .

# Copy the entire models directory to preserve structure
COPY models /app/models

# Expose TF Serving compatible ports
EXPOSE 8501

# Run the server
CMD ["python", "serve_model.py"]